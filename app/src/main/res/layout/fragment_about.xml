<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:layout_constraintBottom_toTopOf="@id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/uptm" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:text="Develop with ♥️\n by Muhammad Nurhayat Abdul Halim"
            android:textAlignment="center"
            android:layout_margin="100dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPTM Smart Campus"
            android:textAlignment="center"
            android:textSize="38sp"
            android:textStyle="bold"
            android:layout_margin="60dp"
            app:layout_constraintBottom_toTopOf="@id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:text="Build 2024"
            android:textAlignment="center"
            android:layout_marginTop="150dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/descriptionTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintVertical_bias="0.761" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="UPTM Smart Campus is a mobile platform for accessing digital information and self-service. It allows students to view their digital ID, make university fee payments, and access the Learning Management System (LMS) and Campus Management System (CMS) conveniently.\n\n"
            android:justificationMode="inter_word"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/newTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/newTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Project Objectives :"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
            app:layout_constraintBottom_toTopOf="@id/newTextView2"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/newTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1) To Accelerate and Streamline Academic Activities"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/newTextView"
            app:layout_constraintBottom_toTopOf="@id/newTextView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/newTextView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="The project aims to seamlessly integrate the UPTM Smart Campus mobile app with the Learning Management System (LMS) and Campus Management System (CMS) to significantly reduce the time students spend navigating between platforms for accessing course materials and submitting assignments. This integration, targeted to achieve a 20%-time reduction, will enhance the overall academic experience, leveraging existing API capabilities and collaboration with the university's IT department. The objective is to implement this integration within the next academic semester."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/newTextView2"
            app:layout_constraintBottom_toTopOf="@id/newTextView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/newTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2) To Enhance Usability in Digital ID and Fee Payment Processes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/newTextView3"
            app:layout_constraintBottom_toTopOf="@id/newTextView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/newTextView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="The project objective is to improve the usability of Digital ID features and fee payment processes within the UPTM Smart Campus mobile app. This involves redesigning the user interface to simplify the steps involved in fee payments and accessing Digital IDs. The measurable goal is to achieve a 25% increase in user satisfaction and engagement with these features."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/newTextView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
